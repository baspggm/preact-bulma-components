{
	"compilerOptions": {
		 "module": "commonjs",
		 "target": "es6",
		 "declaration": true,
		 "outDir": "./dist",

		 "jsx": "react",
		 "jsxFactory": "h",

		 "noImplicitAny": true,
		 "noUnusedLocals": true,
		 "noUnusedParameters": true,
		 "strictNullChecks": true,
		 "allowUnreachableCode": false,
		 "removeComments": true,
		 "preserveConstEnums": true,
		 "sourceMap": true,
		 "emitDecoratorMetadata": true,
		 "experimentalDecorators": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"stories/**/*.ts",
		"stories/**/*.tsx",
		"test/**/*.ts",
		"test/**/*.tsx",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
